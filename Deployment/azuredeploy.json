{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "appName": {
            "type": "string",
            "metadata": {
                "description": "The name of the function app that you wish to create."
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "gitHubToken": {
            "type": "securestring",
            "metadata": {
                "description": "GitHub token that is used to access repositories"
            }
        },
        "gitHubOrganization": {
            "type": "string",
            "metadata": {
                "description": "GitHub organization that is to be validated"
            }
        },
        "environment": {
            "type": "string",
            "metadata": {
                "description": "Environment type (Development, Production)"
            },
            "allowedValues": [
                "Development",
                "Production"
            ]
        }
    },
    "variables": {
        "validatorFunctionAppName": "[parameters('appName')]",
        "validatorHostingPlanName": "[parameters('appName')]",
        "applicationInsightsName": "[parameters('appName')]",
        "validatorStorageAccountName": "[concat('app', uniqueString(subscription().subscriptionId))]",
        "validatorStorageAccountid": "[concat(resourceGroup().id,'/providers/','Microsoft.Storage/storageAccounts/', variables('validatorStorageAccountName'))]",
        "monitorFunctionAppName": "[concat(parameters('appName'), '-monitor')]",
        "monitorHostingPlanName": "[variables('monitorFunctionAppName')]",
        "monitorStorageAccountName": "[concat('monitor', uniqueString(subscription().subscriptionId))]",
        "monitorStorageAccountid": "[concat(resourceGroup().id,'/providers/','Microsoft.Storage/storageAccounts/', variables('monitorStorageAccountName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('validatorStorageAccountName')]",
            "apiVersion": "2018-07-01",
            "location": "[parameters('location')]",
            "kind": "Storage",
            "sku": {
                "name": "Standard_LRS"
            },
            "tags": {
                "displayName": "Storage for validator function app",
                "environment": "[parameters('environment')]"
            }
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2015-04-01",
            "name": "[variables('validatorHostingPlanName')]",
            "location": "[parameters('location')]",
            "properties": {
                "name": "[variables('validatorHostingPlanName')]",
                "computeMode": "Dynamic",
                "sku": "Dynamic"
            },
            "tags": {
                "displayName": "Server for validator function app",
                "environment": "[parameters('environment')]"
            }
        },
        {
            "apiVersion": "2018-02-01",
            "type": "Microsoft.Web/sites",
            "kind": "functionapp",
            "name": "[variables('validatorFunctionAppName')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('validatorHostingPlanName'))]",
                "[resourceId('Microsoft.Storage/storageAccounts', variables('validatorStorageAccountName'))]"
            ],
            "tags": {
                "displayName": "Validator Function app",
                "environment": "[parameters('environment')]"
            },
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('validatorHostingPlanName'))]",
                "siteConfig": {
                    "defaultDocuments": [],
                    "phpVersion": "",
                    "use32BitWorkerProcess": false,
                    "appSettings": [
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('validatorStorageAccountName'), ';AccountKey=', listKeys(variables('validatorStorageAccountid'),'2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('validatorStorageAccountName'), ';AccountKey=', listKeys(variables('validatorStorageAccountid'),'2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "WEBSITE_CONTENTSHARE",
                            "value": "[toLower(variables('validatorFunctionAppName'))]"
                        },
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~3"
                        },
                        {
                            "name": "WEBSITE_NODE_DEFAULT_VERSION",
                            "value": ""
                        },
                        {
                            "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                            "value": "[reference(resourceId('microsoft.insights/components/', variables('applicationInsightsName')), '2015-05-01').InstrumentationKey]"
                        },
                        {
                            "name": "GitHub:Token",
                            "value": "[parameters('gitHubToken')]"
                        },
                        {
                            "name": "GitHub:Organization",
                            "value": "[parameters('gitHubOrganization')]"
                        },
                        {
                            "name": "Rules:HasCodeownersRule",
                            "value": "disable"
                        }
                    ]
                }
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('monitorStorageAccountName')]",
            "apiVersion": "2018-07-01",
            "location": "[parameters('location')]",
            "kind": "Storage",
            "sku": {
                "name": "Standard_LRS"
            },
            "tags": {
                "displayName": "Storage for monitor function app",
                "environment": "[parameters('environment')]"
            }
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2015-04-01",
            "name": "[variables('monitorHostingPlanName')]",
            "location": "[parameters('location')]",
            "properties": {
                "name": "[variables('monitorHostingPlanName')]",
                "computeMode": "Dynamic",
                "sku": "Dynamic"
            },
            "tags": {
                "displayName": "Server for monitor function app",
                "environment": "[parameters('environment')]"
            }
        },
        {
            "apiVersion": "2018-02-01",
            "type": "Microsoft.Web/sites",
            "kind": "functionapp",
            "name": "[variables('monitorFunctionAppName')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('monitorHostingPlanName'))]",
                "[resourceId('Microsoft.Storage/storageAccounts', variables('monitorStorageAccountName'))]"
            ],
            "tags": {
                "displayName": "Monitor Function app",
                "environment": "[parameters('environment')]"
            },
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('monitorHostingPlanName'))]",
                "siteConfig": {
                    "defaultDocuments": [],
                    "phpVersion": "",
                    "use32BitWorkerProcess": false,
                    "appSettings": [
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('monitorStorageAccountName'), ';AccountKey=', listKeys(variables('monitorStorageAccountid'),'2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('monitorStorageAccountName'), ';AccountKey=', listKeys(variables('monitorStorageAccountid'),'2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "WEBSITE_CONTENTSHARE",
                            "value": "[toLower(variables('monitorFunctionAppName'))]"
                        },
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~3"
                        },
                        {
                            "name": "WEBSITE_NODE_DEFAULT_VERSION",
                            "value": ""
                        },
                        {
                            "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                            "value": "[reference(resourceId('microsoft.insights/components/', variables('applicationInsightsName')), '2015-05-01').InstrumentationKey]"
                        },
                        {
                            "name": "StatusMonitoringConfiguration:ResourceGroup",
                            "value": "[resourceGroup().name]"
                        },
                        {
                            "name": "StatusMonitoringConfiguration:SubscriptionId",
                            "value": "[subscription().subscriptionId]"
                        },
                        {
                            "name": "TableStorage:ConnectionString",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('monitorStorageAccountName'), ';AccountKey=', listKeys(variables('monitorStorageAccountid'),'2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "TableStorage:CacheTable",
                            "value": "statuscache"
                        },
                    ]
                }
            }
        },
        {
            "comments": "Application insights",
            "apiVersion": "2015-05-01",
            "name": "[variables('applicationInsightsName')]",
            "type": "Microsoft.Insights/components",
            "location": "[parameters('location')]",
            "tags": {
                "[concat('hidden-link:', resourceGroup().id, '/providers/Microsoft.Web/sites/', variables('applicationInsightsName'))]": "Resource",
                "displayName": "Application insights",
                "environment": "[parameters('environment')]"
            },
            "properties": {
                "ApplicationId": "[variables('applicationInsightsName')]",
                "Request_Source": "IbizaWebAppExtensionCreate",
                "Application_Type": "web"
            }
        }
    ]
}
